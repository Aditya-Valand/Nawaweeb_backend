{
  "info": {
    "_postman_id": "auth-collection-nawaweeb",
    "name": "Nawaweeb Auth Routes",
    "description": "Complete collection for testing all authentication endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"TestPassword@123\",\n  \"full_name\": \"Test User\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/register",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "5000",
          "path": [
            "api",
            "auth",
            "register"
          ]
        },
        "description": "Register a new user account"
      }
    },
    {
      "name": "2. Login User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@nawaweeb.com\",\n  \"password\": \"Admin@123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/login",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "5000",
          "path": [
            "api",
            "auth",
            "login"
          ]
        },
        "description": "Login with email and password to get JWT token"
      }
    },
    {
      "name": "3. Get Current User Profile (Protected)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer YOUR_ACCESS_TOKEN_HERE",
            "description": "Replace YOUR_ACCESS_TOKEN_HERE with the token from login response"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/api/auth/profile",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "5000",
          "path": [
            "api",
            "auth",
            "profile"
          ]
        },
        "description": "Get current logged-in user's profile (requires authentication)"
      }
    },
    {
      "name": "4. Update User Profile (Protected)",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer YOUR_ACCESS_TOKEN_HERE",
            "description": "Replace YOUR_ACCESS_TOKEN_HERE with the token from login response"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"full_name\": \"Updated User Name\",\n  \"is_clan_member\": true\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/profile",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "5000",
          "path": [
            "api",
            "auth",
            "profile"
          ]
        },
        "description": "Update current user's profile (name, clan membership)"
      }
    },
    {
      "name": "5. Update User Role (Admin Only)",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer ADMIN_TOKEN_HERE",
            "description": "Replace ADMIN_TOKEN_HERE with admin's token from login"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"USER_UUID_HERE\",\n  \"role\": \"admin\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/users/role",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "5000",
          "path": [
            "api",
            "auth",
            "users",
            "role"
          ]
        },
        "description": "Update user role (admin only). Role can be 'customer' or 'admin'"
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ]
}
